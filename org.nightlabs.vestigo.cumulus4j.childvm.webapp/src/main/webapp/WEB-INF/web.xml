<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	metadata-complete="true"
	version="2.5">
	<!--
	metadata-complete="true" causes the annotations to be ignored, which speeds up the jetty startup significantly
	(from about 30 sec to 1 sec).
	-->

	<display-name>org.nightlabs.vestigo.childvm.webapp</display-name>

	<servlet>
		<servlet-name>org.nightlabs.vestigo.childvm.webapp.ChildVMApp</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>org.nightlabs.vestigo.childvm.webapp.ChildVMApp</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>org.nightlabs.vestigo.childvm.webapp.ChildVMApp</servlet-name>
		<url-pattern>/ChildVMApp/*</url-pattern>
	</servlet-mapping>

	<!--
	The above was copied from org.nightlabs.vestigo.childvm.webapp/src/main/webapp/WEB-INF/web.xml and must be
	kept up-to-date (i.e. exactly the same as the contents of the original web.xml). The below is cumulus4j-specific.
	-->

	<!-- BEGIN from org.cumulus4j.keymanager.back.webapp -->
	<servlet>
		<servlet-name>org.cumulus4j.store.crypto.keymanager.rest.KeyManagerBackWebApp</servlet-name>
		<servlet-class>org.nightlabs.vestigo.cumulus4j.childvm.webapp.jerseyproxy.JerseyProxyServlet</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>org.cumulus4j.store.crypto.keymanager.rest.KeyManagerBackWebApp</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>org.cumulus4j.store.crypto.keymanager.rest.KeyManagerBackWebApp</servlet-name>
		<url-pattern>/org.cumulus4j.keymanager.back.webapp/*</url-pattern>
	</servlet-mapping>
	<!-- END from org.cumulus4j.keymanager.back.webapp -->

</web-app>
