<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<extension
         point="org.eclipse.datatools.connectivity.connectionProfile">
      <category
            id="org.nightlabs.eclipse.jjqb.core.JDODriver"
            name="JDO Connections"
            parentCategory="%oda.parent.category.id"/>
      <connectionProfile
            category="org.nightlabs.eclipse.jjqb.core.JDODriver"
            icon="icons/jdo.gif"
            id="org.nightlabs.eclipse.jjqb.core.JDODriver"
            name="JDO Connection Profile"
            pingFactory="org.eclipse.datatools.connectivity.oda.profile.OdaConnectionFactory"/>
      <connectionFactory
            id="org.eclipse.datatools.connectivity.oda.IConnection"
            name="JDO Connection Factory"
            class="org.eclipse.datatools.connectivity.oda.profile.OdaConnectionFactory"
            profile="org.nightlabs.eclipse.jjqb.core.JDODriver"/>
      <newWizard
            id="org.nightlabs.eclipse.jjqb.core.JDODriver"
            name="New JDO connection"
            class="org.eclipse.datatools.connectivity.oda.design.ui.wizards.NewDataSourceWizard"
            description="Create a new JDO driver"
            icon="icons/jdo.gif"
            profile="org.nightlabs.eclipse.jjqb.core.JDODriver"/>
   </extension>


   <extension
         point="org.eclipse.datatools.connectivity.connectionProfile">
      <category
            id="org.nightlabs.eclipse.jjqb.core.JPADriver"
            name="JPA Connections"
            parentCategory="%oda.parent.category.id"/>
      <connectionProfile
            category="org.nightlabs.eclipse.jjqb.core.JPADriver"
            icon="icons/jpa.gif"
            id="org.nightlabs.eclipse.jjqb.core.JPADriver"
            name="JPA Connection Profile"
            pingFactory="org.eclipse.datatools.connectivity.oda.profile.OdaConnectionFactory"/>
      <connectionFactory
            id="org.eclipse.datatools.connectivity.oda.IConnection"
            name="JPA Connection Factory"
            class="org.eclipse.datatools.connectivity.oda.profile.OdaConnectionFactory"
            profile="org.nightlabs.eclipse.jjqb.core.JPADriver"/>
      <newWizard
            id="org.nightlabs.eclipse.jjqb.core.JPADriver"
            name="New JPA connection"
            class="org.eclipse.datatools.connectivity.oda.design.ui.wizards.NewDataSourceWizard"
            description="Create a new JPA driver"
            icon="icons/jpa.gif"
            profile="org.nightlabs.eclipse.jjqb.core.JPADriver"/>
   </extension>


   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            id="org.nightlabs.eclipse.jjqb.core.JDODriver"
            name="JDO Properties"
            class="org.nightlabs.eclipse.jjqb.ui.JDODriverPropertyPage"
            objectClass="org.eclipse.datatools.connectivity.IConnectionProfile">
         <filter
               name="org.eclipse.datatools.profile.property.id"
               value="org.nightlabs.eclipse.jjqb.core.JDODriver"/>
      </page>
   </extension>


   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            id="org.nightlabs.eclipse.jjqb.core.JPADriver"
            name="JPA Properties"
            class="org.nightlabs.eclipse.jjqb.ui.JPADriverPropertyPage"
            objectClass="org.eclipse.datatools.connectivity.IConnectionProfile">
         <filter
               name="org.eclipse.datatools.profile.property.id"
               value="org.nightlabs.eclipse.jjqb.core.JPADriver"/>
      </page>
   </extension>

   <extension
            point="org.eclipse.datatools.connectivity.oda.design.ui.dataSource">
      <dataSourceUI id="org.nightlabs.eclipse.jjqb.core.JDODriver">
        <newDataSourceWizard
              includesProgressMonitor="false"
              pageClass="org.nightlabs.eclipse.jjqb.ui.JDODriverWizardPage"
              pageTitle="JDO DataSource"
              windowTitle="JDO DataSource"/>
      </dataSourceUI> 
      <dataSetUI
              id="org.nightlabs.eclipse.jjqb.core.JDODataSet"
              initialPageId="org.nightlabs.birt.jdo.jdoql.ui.JDOQLQueryWizardPage"
              supportsInParameters="true"
              supportsOutParameters="false">
        <dataSetWizard
              class="org.eclipse.datatools.connectivity.oda.design.ui.wizards.DataSetWizard"
              windowTitle="JDO Query"/>
        <dataSetPage
              displayName="JDO Query"
              icon="icons/jdo.gif"
              id="org.nightlabs.eclipse.jjqb.ui.JDOQueryWizardPage"
              path="/"
              wizardPageClass="org.nightlabs.eclipse.jjqb.ui.JDOQueryWizardPage"/>
      </dataSetUI>
   </extension>


   <extension
            point="org.eclipse.datatools.connectivity.oda.design.ui.dataSource">
      <dataSourceUI id="org.nightlabs.eclipse.jjqb.core.JPADriver">
        <newDataSourceWizard
              includesProgressMonitor="false"
              pageClass="org.nightlabs.eclipse.jjqb.ui.JPADriverWizardPage"
              pageTitle="JPA DataSource"
              windowTitle="JPA DataSource"/>
      </dataSourceUI> 
      <dataSetUI
              id="org.nightlabs.eclipse.jjqb.core.JPADataSet"
              initialPageId="org.nightlabs.birt.jpa.jpaql.ui.JPAQLQueryWizardPage"
              supportsInParameters="true"
              supportsOutParameters="false">
        <dataSetWizard
              class="org.eclipse.datatools.connectivity.oda.design.ui.wizards.DataSetWizard"
              windowTitle="JPA Query"/>
        <dataSetPage
              displayName="JPA Query"
              icon="icons/jpa.gif"
              id="org.nightlabs.eclipse.jjqb.ui.JPAQueryWizardPage"
              path="/"
              wizardPageClass="org.nightlabs.eclipse.jjqb.ui.JPAQueryWizardPage"/>
      </dataSetUI> 
   </extension>


   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="org.nightlabs.eclipse.jjqb.ui.viewContribution_DataSourceExplorerNavigator"
            targetID="org.eclipse.datatools.connectivity.DataSourceExplorerNavigator">
         <action
               class="org.nightlabs.eclipse.jjqb.ui.OpenQueryBrowserAction"
               enablesFor="+"
               id="org.nightlabs.eclipse.jjqb.ui.OpenQueryBrowserAction"
               label="Open query browser"
               style="push"
               toolbarPath="additions">
         </action>
      </viewContribution>
   </extension>


   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.nightlabs.eclipse.jjqb.ui.objectContribution_AbstractDriver"
            objectClass="org.eclipse.datatools.connectivity.IConnectionProfile">
         <action
               class="org.nightlabs.eclipse.jjqb.ui.OpenQueryBrowserAction"
               enablesFor="+"
               id="org.nightlabs.eclipse.jjqb.ui.OpenQueryBrowserAction"
               label="Open query browser">
         </action>
      </objectContribution>
   </extension>


   <extension
         point="org.eclipse.ui.editors">
<!--
      <editor
            class="org.nightlabs.eclipse.jjqb.ui.exampleeditor.XMLEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="xml"
            icon="icons/sample.gif"
            id="org.nightlabs.eclipse.jjqb.ui.exampleeditor.XMLEditor"
            name="Sample XML Editor">
      </editor>
-->
      <editor
            class="org.nightlabs.eclipse.jjqb.ui.browser.JDOQueryBrowserEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            extensions="jdoql"
            icon="icons/jdo.gif"
            id="org.nightlabs.eclipse.jjqb.ui.browser.JDOQueryBrowserEditor"
            name="JDO Query Browser">
      </editor>
   </extension>


   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.nightlabs.eclipse.jjqb.ui.browser.JPAQueryBrowserEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            extensions="jpql"
            icon="icons/jpa.gif"
            id="org.nightlabs.eclipse.jjqb.ui.browser.JPAQueryBrowserEditor"
            name="JPA Query Browser">
      </editor>
   </extension>


   <extension
         point="org.eclipse.ui.views">
      <category 
            id="org.nightlabs.eclipse.jjqb.ui"
            name="JDO/JPA Query Browser">
      </category>
      <view id="org.nightlabs.eclipse.jjqb.ui.detailtree.ResultSetTableCellDetailTreeView"
            name="Object graph detail tree"
            icon="icons/view.png"
            category="org.nightlabs.eclipse.jjqb.ui"
            class="org.nightlabs.eclipse.jjqb.ui.detailtree.ResultSetTableCellDetailTreeView"/>
   </extension>

</plugin>
