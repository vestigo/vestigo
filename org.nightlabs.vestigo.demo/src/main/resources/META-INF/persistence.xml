<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="vestigoDemoMovieJPA">
		<provider>org.datanucleus.api.jpa.PersistenceProviderImpl</provider>
		<class>org.nightlabs.jjqb.demo.jpa.Language</class>
		<class>org.nightlabs.jjqb.demo.jpa.Movie</class>
		<class>org.nightlabs.jjqb.demo.jpa.Person</class>
		<class>org.nightlabs.jjqb.demo.jpa.Rating</class>
		<exclude-unlisted-classes />
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:target/derby/vestigoDemoMovieJPA;create=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>		
	</persistence-unit>
	
	<persistence-unit name="vestigoDemoMovieJDO">
		<class>org.nightlabs.jjqb.demo.jdo.Language</class>
		<class>org.nightlabs.jjqb.demo.jdo.Movie</class>
		<class>org.nightlabs.jjqb.demo.jdo.Person</class>
		<class>org.nightlabs.jjqb.demo.jdo.Rating</class>
		<exclude-unlisted-classes />
        <properties>
            <property name="javax.jdo.option.ConnectionDriverName" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.jdo.option.ConnectionURL" value="jdbc:derby:target/derby/vestigoDemoMovieJDO;create=true"/>
            <property name="javax.jdo.option.ConnectionUserName" value="root"/>
            <property name="javax.jdo.option.ConnectionPassword" value=""/>
        </properties>		
	</persistence-unit>
	
</persistence>
