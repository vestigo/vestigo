<project default="build">
	<target name="build">
		<delete verbose="true" failonerror="false">
			<fileset dir="src/main/java/org/nightlabs/jjqb/childvm/shared/persistencexml/jaxb">
				<include name="**/*"/>
			</fileset>
		</delete>

		<exec executable="xjc">
			<arg value="-b"/>
			<arg value="jaxb-bindings.xml"/>

			<arg value="-d" />
			<arg value="src/main/java"/>

			<arg value="-p"/>
			<arg value="org.nightlabs.jjqb.childvm.shared.persistencexml.jaxb"/>

			<arg value="-extension"/>
			
			<arg value="http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" />
		</exec>
	</target>
</project>