	<parent>
		<groupId>org.nightlabs.vestigo</groupId>
		<artifactId>org.nightlabs.vestigo.tycho</artifactId>
		<version>0.7.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<dependencies>
		<dependency>
			<groupId>org.nightlabs.vestigo</groupId>
			<artifactId>org.nightlabs.vestigo.ui.feature</artifactId>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.vestigo</groupId>
			<artifactId>org.nightlabs.vestigo.cumulus4j.ui.feature</artifactId>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.vestigo</groupId>
			<artifactId>org.nightlabs.vestigo.jdt.ui.feature</artifactId>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.vestigo</groupId>
			<artifactId>org.nightlabs.vestigo.log4j.ui.feature</artifactId>
		</dependency>
		<dependency>
			<groupId>org.nightlabs.vestigo</groupId>
			<artifactId>org.nightlabs.vestigo.maven.ui.feature</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>${tychoGroupId}</groupId>
				<artifactId>tycho-p2-repository-plugin</artifactId>
				<version>${tychoVersion}</version>
				<configuration>
					<includeAllDependencies>false</includeAllDependencies>
					<createArtifactRepository>true</createArtifactRepository>
					<compress>true</compress>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.nightlabs</groupId>
				<artifactId>org.nightlabs.p2.repository.references.plugin</artifactId>
				<version>1.2.0</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>add-references</goal>
						</goals>
						<configuration>
							<repositoryArchive>${project.build.directory}/${project.artifactId}.zip</repositoryArchive>
							<references>
								<reference>http://download.eclipse.org/modeling/tmf/xtext/updates/composite/releases/</reference>
							</references>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>