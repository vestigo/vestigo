<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>org.nightlabs.jjqb.assembly.deploy</artifactId>
	<packaging>pom</packaging>

	<parent>
		<groupId>org.nightlabs.jjqb</groupId>
		<artifactId>org.nightlabs.jjqb.parent</artifactId>
		<version>0.1.1-SNAPSHOT</version>
		<relativePath>../org.nightlabs.jjqb.parent</relativePath>
	</parent>

	<repositories>		
		<repository>
			<id>dev.nightlabs.org-private-libs-release-local</id>
			<url>https://dev.nightlabs.org/maven-repository-private/libs-release-local</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>dev.nightlabs.org-private-libs-snapshot-local</id>
			<url>https://dev.nightlabs.org/maven-repository-private/libs-snapshot-local</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>

	<distributionManagement>
		<site>
			<id>jjqb.nightlabs.com</id>
			<url>${distributionManagement.site.prefix}/vestigo.nightlabs.com/htdocs/${project.version}/download/stand-alone</url>
		</site>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.0-beta-3</version> <!-- TODO remove this - it's only temporary! -->
				<configuration>
					<locales>en</locales>
					<reportPlugins></reportPlugins>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<executions>
					<execution>
						<id>clean-after-site</id>
						<phase>post-site</phase>
						<goals>
							<goal>clean</goal>
						</goals>
						<configuration>
							<excludeDefaultDirectories>true</excludeDefaultDirectories>
							<filesets>
								<fileSet>
									<directory>target/site</directory>
									<excludes>
										<exclude>vestigo-*</exclude>
									</excludes>
								</fileSet>
							</filesets>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<phase>pre-site</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<!--
								<artifactItem>
									<groupId>org.nightlabs.jjqb</groupId>
									<artifactId>org.nightlabs.jjqb.assembly.parent</artifactId>
									<version>${jjqb.version}</version>
									<type>pom</type>
									<overWrite>true</overWrite>
									<destFileName>vestigo-TEST.pom</destFileName>
								</artifactItem>
								-->

								<artifactItem>
									<groupId>org.nightlabs.jjqb</groupId>
									<artifactId>org.nightlabs.jjqb.assembly.linux-gtk</artifactId>
									<version>${jjqb.version}</version>
									<classifier>bin</classifier>
									<type>tar.gz</type>
									<overWrite>true</overWrite>
									<destFileName>vestigo-linux-gtk-${jjqb.version}.tar.gz</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.nightlabs.jjqb</groupId>
									<artifactId>org.nightlabs.jjqb.assembly.linux-gtk-x86_64</artifactId>
									<version>${jjqb.version}</version>
									<classifier>bin</classifier>
									<type>tar.gz</type>
									<overWrite>true</overWrite>
									<destFileName>vestigo-linux-gtk-x86-64-${jjqb.version}.tar.gz</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.nightlabs.jjqb</groupId>
									<artifactId>org.nightlabs.jjqb.assembly.win32</artifactId>
									<version>${jjqb.version}</version>
									<classifier>bin</classifier>
									<type>zip</type>
									<overWrite>true</overWrite>
									<destFileName>vestigo-win32-${jjqb.version}.zip</destFileName>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}/site/</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-site-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>